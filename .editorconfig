# EditorConfig - Tüm editörlerde çalışır
# https://editorconfig.org

root = true

# Tüm dosyalar için
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python dosyaları
[*.py]
indent_style = tab
indent_size = 4
max_line_length = 120

# JSON, YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# JavaScript, CSS
[*.{js,css}]
indent_style = space
indent_size = 2
